<header>
  <div class="header-sign-in-page">
    <div class="header-left">
      <%= link_to image_tag("nurho_icon.png", class: "nurho-icon"), "/" %>
    </div>
    <div class="header-middle">
      <h1 class="header-text">会社情報入力</h1>
    </div>
  </div>
</header>

<%= form_with model: @company, url: company_registration_path, class: "sign-in", local: true do |f| %>

<div class="form-wrap">
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">会社名</label>
    </div>
    <%= f.text_area :name, class: "input-default", id: "company-name", placeholder: "例)株式会社〇〇", maxlength: "30" %>
    <div class="error-message">
      <% if @company.errors.include?(:name) %>
        <span>※ </span>
        <%= @company.errors.full_messages_for(:name).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class: "input-default", id: "email", placeholder: "PC・携帯どちらでも可", autofocus: true %>
    <div class="error-message">
      <% if @company.errors.include?(:email) %>
        <span>※ </span>
        <%= @company.errors.full_messages_for(:email).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class: "input-default", id: "password", placeholder: "英字と数字を含めた6文字以上の半角英数字" %>
    <div class="error-message">
      <% if @company.errors.include?(:password) %>
        <span>※ </span>
        <%= @company.errors.full_messages_for(:password).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class: "input-default", id: "password-confirmation", placeholder: "もう一度入力して下さい" %>
    <div class="error-message">
      <% if @company.errors.include?(:password_confirmation) %>
        <span>※ </span>
        <%= @company.errors.full_messages_for(:password_confirmation).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <h2 class="form-bottom-text">
      <span>利用規約</span>
      を必ず確認してください
    </h2>
  </div>
  <div class="registration-btn">
    <%= f.submit "登録" ,class:"btn-text" %>
  </div>
</div>

<% end %>

<footer>
  <div class="footer-left"></div>
  <div class="footer-middle">
    <p class="logo">© nurho</p>
  </div>
  <div class="footer-right">
  </div>
</footer>
